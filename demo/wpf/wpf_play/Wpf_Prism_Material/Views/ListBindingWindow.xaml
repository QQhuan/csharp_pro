<Window x:Class="Wpf_Prism_Material.Views.ListBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Prism_Material.Views"
        mc:Ignorable="d"
        Title="ListBindingWindow" Height="450" Width="800">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Right" Margin="10 0 0 0">
            <Button Content="新增用户" Name="AddBtn" Click="AddBtn_Click"/>
            <Button Content="修改用户" Name="UpdateBtn" Click="UpdateBtn_Click"/>
            <Button Content="删除用户" Name="DeleteBtn" Click="DeleteBtn_Click"/>
        </StackPanel>
        <ListBox Name="userlist" DisplayMemberPath="Name"/>
    </DockPanel>
</Window>
